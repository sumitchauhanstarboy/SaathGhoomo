# =====================================================
# SAATH GHOOMO - Backend Environment Configuration
# =====================================================

# Server Configuration
PORT=8081
NODE_ENV=development

# =====================================================
# DATABASE CONFIGURATION
# =====================================================
MONGODB_URI=mongodb://localhost:27017/saathghoomo
# For MongoDB Atlas (Cloud):
# MONGODB_URI=mongodb+srv://username:password@cluster.mongodb.net/saathghoomo?retryWrites=true&w=majority

# =====================================================
# JWT CONFIGURATION
# =====================================================
# JWT Secret Key (use a strong random string in production)
JWT_SECRET=your_super_secret_jwt_key_change_this_in_production_12345678

# JWT Token Expiry Times
ACCESS_TOKEN_EXPIRY=15m
REFRESH_TOKEN_EXPIRY=30d

# Refresh Token Secret (use a different strong string)
REFRESH_TOKEN_SECRET=your_super_secret_refresh_token_key_change_this_12345678

# =====================================================
# GOOGLE OAUTH CONFIGURATION (Optional)
# =====================================================
GOOGLE_CLIENT_ID=your_google_client_id_here.apps.googleusercontent.com
GOOGLE_CLIENT_SECRET=your_google_client_secret_here

# =====================================================
# FIREBASE CONFIGURATION (Optional)
# =====================================================
FIREBASE_API_KEY=your_firebase_api_key_here

# =====================================================
# CLIENT URLS (For CORS)
# =====================================================
# Single client URL
CLIENT_URL=http://localhost:5173

# Multiple client URLs (comma-separated)
# CLIENT_URLS=http://localhost:5173,http://localhost:8080,http://localhost:8081

# =====================================================
# OPTIONAL: SMS/OTP SERVICE CONFIGURATION
# =====================================================
# For SMS OTP delivery, integrate with one of these services:

# Twilio Configuration
# TWILIO_ACCOUNT_SID=your_twilio_account_sid
# TWILIO_AUTH_TOKEN=your_twilio_auth_token
# TWILIO_PHONE_NUMBER=+1234567890

# AWS SNS Configuration
# AWS_ACCESS_KEY_ID=your_aws_access_key
# AWS_SECRET_ACCESS_KEY=your_aws_secret_key
# AWS_REGION=us-east-1

# =====================================================
# EMAIL SERVICE CONFIGURATION (Optional)
# =====================================================
# For sending verification emails

# SendGrid Configuration
# SENDGRID_API_KEY=your_sendgrid_api_key
# SENDGRID_FROM_EMAIL=noreply@saathghoomo.com

# Gmail Configuration
# GMAIL_USER=your_gmail@gmail.com
# GMAIL_PASSWORD=your_app_specific_password

# =====================================================
# LOGGING CONFIGURATION (Optional)
# =====================================================
LOG_LEVEL=info
# LOG_LEVEL can be: error, warn, info, debug, trace
